<body>
  <div id="header">
    <div class="header-container">
      <a href="/" id="home">
        <img src="/img/logo.png" id="logo">FlightPath
      </a>
    </div>
    <div class="header-container">
      <form method="GET" id="search-container">
        <input type="text" name="airport" placeholder="Search for an airport...">
        <button type="submit"><i class="material-icons">search</i></button>
      </form>
    </div>
    <div class="header-container">
      <nav id="account">
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      </nav>
    </div>
  </div>
  <div class="center-container">
    <div class="inside-center-container">
      <h2>Register</h2>
      <form method="POST" id="login">
        <p>Username: </p>
        <input type="text" name="username" placeholder="Username...">
        <p>Password: </p>
        <input type="password" name="password" placeholder="Password...">
        {{#if error}}
          <p class="error">{{error}}</p>
        {{/if}}
        <div id="login-container">
          <button class="login-button-prim" type="submit">Register</button>
          Already have an account? <a href="/login" class="login-button-sec">Log in</a>
        </div>
      </form>
    </div>
  </div>
</body>